# Uncomment the next line to define a global platform for your project, means what version do you want your ios to support
# means ios 10.0 version and above becuz the CLTypingLabel pod requires at least 10.0 version
platform :ios, '13.0'

target 'Flash Chat iOS13' do
  use_frameworks!

  # Pods for Flash Chat iOS13
  
  pod 'CLTypingLabel', '~> 0.4.0'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'

end
